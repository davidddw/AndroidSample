<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <ImageView
        android:id="@+id/imageName"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:contentDescription="@string/imageDefaultContent"
        android:src="@mipmap/ic_account_circle_grey600_24dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageName"
        android:layout_toStartOf="@+id/tv_movie_grade">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:maxLines="1"
            android:text="1、肖申克的救赎"
            android:textColor="#F0F"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_movie_doc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvName"
            android:layout_margin="2dp"
            android:maxLines="2"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:text="导演: 弗兰克·德拉邦特 Frank Darabont"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvCast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_movie_doc"
            android:layout_margin="2dp"
            android:maxLines="2"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:text="主演: 蒂姆·罗宾斯 Tim Robbins"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_movie_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvCast"
            android:layout_margin="2dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:text="1994 / 美国 / 犯罪 剧情"
            android:textSize="12sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_movie_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:text="9.6"
        android:textColor="#F00"
        android:textSize="36sp"
        />

</RelativeLayout>